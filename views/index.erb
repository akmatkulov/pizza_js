<h2>Welcome to Pizza Shop</h2>

<div class="row">
    <% @products.each do |item| %>
      <div class="col-md-3">
        <div>
            <%= item.title %>
        </div>

        <div>
            <img src="<%= item.path_to_image %>" width="200" height="200">
        </div>

        <div>
            <%= item.description %>
        </div>

        <div>
          Size: <%= item.size %>
        </div>

        <div>
          Price: <%= item.price %>
        </div>

        <div>
          <button type="button" class="btn btn-success" onclick="add_to_cart(<%= item.id %>)">Add to cart</button>
        </div>



      </div>
    <% end %>
</div>

<button type="button" class="btn btn-info btn-lg" onclick="something()">Info</button>
