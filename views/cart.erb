<h2>Your cart:</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>QTY</th>
    </tr>
  </thead>

  <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <% @items.each do |item| %>
      <tr>
        <td><%= item[0].title %></td>
        <td><%= item[0].price %></td>
        <td><%= item[1] %></td>
      </tr>
      <% total_price += item[0].price * item[1].to_i %>
      <% total_qty += item[1].to_i %>
    <% end %>
    <tr>
      <td></td>
      <td> Total price: <%= total_price %></td>
      <td>Total QTY: <%= total_qty %> </td>
    </tr>
  </tbody>
</table>


<form action="/place_order" method="post" role="form">

  <input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">

  <div class="form-group">
    <label>Ваше имя</label>
    <input type="text" name="order[name]" class="form-control" placeholder="Ваше имя" >
  </div>

  <div class="form-group">
    <label>Ваш номер телефона</label>
    <input type="text" name="order[phone]" class="form-control" placeholder="Ваш номер телефона" >
  </div>

  <div class="form-group">
    <label>Ваш адресс </label>
    <input type="text" name="order[address]" class="form-control" placeholder="Ваше адрес" >
  </div>

    <button type="submit" class="btn btn-success btn-lg">Place this order!</button>
    <button class="btn btn-danger btn-lg" onclick="return cancel_order()">Cancel!</button>

</form>
